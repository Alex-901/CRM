<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CRM</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/crmstyles.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/calendar.js")
    @Scripts.Render("~/Scripts/crmscripts.js")
    <link rel="stylesheet" href="~/Content/fa/css/font-awesome.min.css">
</head>
<body>
    <div class="crm-sub-list">
        <ul>
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp; Home</a></li>
            <li><a href="@Url.Action("Index", "Agency")"><i class="fa fa-industry fa-fw" aria-hidden="true"></i>&nbsp; Agencies</a></li>
        </ul>
    </div>
    <div class="crm-container">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div id="delete-dialog" class="modal">
        <div class="modal-content">
            <div class="tableDiv align-center">
                <div class="tableDivRow">
                    <div class="tableDivCell">
                        Are you sure you want to delete this?
                    </div>
                </div>
                <div class="tableDivRow">
                    <div class="tableDivCel">
                        <input type="button" class="btn btn-default btn-sm delete-link-confirm" value="Yes" />
                        <input type="button" class="btn btn-default btn-sm" value="No" onclick="hideModal('delete-dialog');" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
