@model CRMEntities.HistoryItem

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>
        <div id="divAgencySelect" class="form-group hideMe">
            <label class="control-label col-md-2">Agency</label>
            <div class="col-md-10">
                @Html.DropDownList("Agencies", new SelectList(Model.Agencies, "Id", "Name"), "Please select an agency", htmlAttributes: new { @class = "form-control", onchange = "agencySelectChanged();" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Contact</label>
            <div class="col-md-10">
                @Html.DropDownList("ContactDetails", new SelectList(Model.Contacts, "ContactDetailId", "Forename"), "Please select a contact", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <input id="CreationDate" type="hidden" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" class="btn btn-default btn-sm" value="Close" onclick="hideModal('cal-new-hist-modal');" />
                <input type="button" class="btn btn-default btn-sm" value="Add" onclick="saveHistoryItem();" />
            </div>
        </div>
    </div>
}
